{% extends 'base.html.twig' %}

{% block title %}Customer • {{ customer.companyName }}{% endblock %}

{% block body %}
<div class="relative isolate">
    <div aria-hidden="true" class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute left-1/2 top-[-6rem] -translate-x-1/2 opacity-40 blur-3xl">
            <div style="clip-path: polygon(100% 38.5%, 82.6% 100%, 60.2% 37.7%, 52.4% 32.1%, 47.5% 41.8%, 45.2% 65.6%, 27.5% 23.4%, 0.1% 35.3%, 17.9% 0%, 27.7% 23.4%, 76.2% 2.5%, 74.2% 56%, 100% 38.5%)"
                class="aspect-[1154/678] w-[72rem] bg-gradient-to-br from-indigo-400/50 to-fuchsia-400/50 dark:from-indigo-600/40 dark:to-fuchsia-600/40">
            </div>
        </div>
    </div>

    <header class="mx-auto max-w-7xl px-4 pt-10 sm:px-6 lg:px-8">
        <nav class="text-sm text-gray-500 dark:text-gray-400">
            <a href="{{ path('customer_index') }}" class="hover:text-gray-900 dark:hover:text-white">Customers</a>
            <span class="px-2">/</span>
            <span class="text-gray-900 dark:text-gray-100 font-medium">{{ customer.companyName }}</span>
        </nav>

        <div class="mt-6 flex flex-wrap items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                {% set initials = (customer.companyName|split(' ')|map(v => v[:1])|join)|upper %}
                <div aria-hidden="true"
                    class="size-16 select-none rounded-xl bg-gradient-to-br from-indigo-500 to-fuchsia-500 grid place-items-center text-white font-semibold">
                    {{ initials ?: 'C' }}
                </div>
                <div>
                    <h1 class="text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
                        {{ customer.companyName }}
                    </h1>
                    {% if customer.vatNumber %}
                    <p class="mt-1">
                        <span
                            class="inline-flex items-center rounded-md bg-emerald-50 px-2 py-1 text-xs font-medium text-emerald-700 ring-1 ring-inset ring-emerald-600/20 dark:bg-emerald-500/10 dark:text-emerald-300 dark:ring-emerald-400/30">
                            TVA {{ customer.vatNumber }}
                        </span>
                    </p>
                    {% endif %}
                </div>
            </div>

            <div class="flex items-center gap-3">
                <a href="{{ path('customer_edit', {id: customer.id}) }}"
                    class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:ring-white/20 dark:hover:bg-white/15">
                    Edit
                </a>
                <form method="post" action="{{ path('customer_delete', {id: customer.id}) }}"
                    onsubmit="return confirm('Delete this customer?');" class="m-0">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_customer_' ~ customer.id) }}">
                    <button type="submit"
                        class="rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </header>

    <main class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
        <div class="grid gap-6 lg:grid-cols-3">
            <section
                class="lg:col-span-2 rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-900/5 dark:bg-white/5 dark:ring-white/10">
                <h2 class="text-base font-semibold text-gray-900 dark:text-white">Informations</h2>
                <dl class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div class="rounded-lg p-4 ring-1 ring-inset ring-gray-200 dark:ring-white/10">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Company</dt>
                        <dd class="mt-1 text-gray-900 dark:text-gray-100">{{ customer.companyName }}</dd>
                    </div>

                    {% if customer.email %}
                    <div class="rounded-lg p-4 ring-1 ring-inset ring-gray-200 dark:ring-white/10">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</dt>
                        <dd class="mt-1">
                            <a href="mailto:{{ customer.email }}"
                                class="text-indigo-600 hover:text-indigo-500 dark:text-indigo-400">
                                {{ customer.email }}
                            </a>
                        </dd>
                    </div>
                    {% endif %}

                    {% if customer.phone %}
                    <div class="rounded-lg p-4 ring-1 ring-inset ring-gray-200 dark:ring-white/10">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Phone</dt>
                        <dd class="mt-1 text-gray-900 dark:text-gray-100">{{ customer.phone }}</dd>
                    </div>
                    {% endif %}

                    <div class="rounded-lg p-4 ring-1 ring-inset ring-gray-200 dark:ring-white/10">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">SIRENE / SIRET</dt>
                        <dd class="mt-1 font-medium text-gray-900 dark:text-gray-100">{{ customer.sirene ?: '—' }}</dd>
                    </div>

                    <div class="rounded-lg p-4 ring-1 ring-inset ring-gray-200 dark:ring-white/10">
                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">APE / NAF</dt>
                        <dd class="mt-1">
                            {% if customer.ape %}
                            <span
                                class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-600/20 dark:bg-indigo-500/10 dark:text-indigo-300 dark:ring-indigo-400/30">
                                {{ customer.ape }}
                            </span>
                            {% else %}—{% endif %}
                        </dd>
                    </div>
                </dl>
            </section>

            <aside class="space-y-6">
                <div
                    class="rounded-2xl bg-gray-50 p-6 shadow-sm ring-1 ring-gray-900/5 dark:bg-white/5 dark:ring-white/10">
                    <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">Actions</h3>
                    <div class="mt-4 grid gap-3">
                        <a href="{{ path('customer_edit', {id: customer.id}) }}"
                            class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Edit customer
                        </a>
                        <a href="{{ path('customer_index') }}"
                            class="inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:ring-white/20 dark:hover:bg-white/15">
                            Back to list
                        </a>
                    </div>
                </div>

                <div
                    class="rounded-2xl bg-gray-50 p-6 shadow-sm ring-1 ring-gray-900/5 dark:bg-white/5 dark:ring-white/10">
                    <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">Quotes</h3>
                    {% if customer.quotes|length > 0 %}
                    <ul class="mt-4 space-y-3">
                        {% for q in customer.quotes|slice(0,6) %}
                        <li
                            class="flex items-center justify-between rounded-md bg-white/60 px-3 py-2 text-sm ring-1 ring-inset ring-gray-200 hover:bg-white dark:bg-white/5 dark:ring-white/10">
                            <span class="font-medium text-gray-900 dark:text-gray-100">#{{ q.id }} — {{ q.title ??
                                'Quote' }}</span>
                            {# ajuste ces routes selon ta ressource Quote #}
                            <a href="{{ path('quote_show', {id: q.id}) ?? '#' }}"
                                class="text-indigo-600 dark:text-indigo-400">View</a>
                        </li>
                        {% endfor %}
                    </ul>
                    {% else %}
                    <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">No quotes yet.</p>
                    {% endif %}
                </div>
            </aside>
        </div>
    </main>
</div>
{% endblock %}