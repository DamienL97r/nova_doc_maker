{% extends 'base.html.twig' %}
{% block title %}Owners{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
    {# Header #}
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl dark:text-white">Owners</h1>
            <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                La liste des émetteurs (coordonnées et identifiants légaux) utilisés sur vos documents.
            </p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4">
            <a href="{{ path('owner_new') }}" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs
                hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
                dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">
                + New Owner
            </a>
        </div>
    </div>

    {# Flash messages #}
    <div class="mt-6 space-y-3">
        {% for label, messages in app.flashes %}
        {% for message in messages %}
        {% set base = label in ['success','notice'] ? 'bg-green-50 text-green-800 ring-green-200 dark:bg-green-950/40
        dark:text-green-200 dark:ring-green-900/30'
        : (label in ['error','danger'] ? 'bg-rose-50 text-rose-700 ring-rose-200 dark:bg-rose-950/40 dark:text-rose-200
        dark:ring-rose-900/30'
        : 'bg-amber-50 text-amber-800 ring-amber-200 dark:bg-amber-950/40 dark:text-amber-200 dark:ring-amber-900/30')
        %}
        <div class="rounded-md px-4 py-3 text-sm ring-1 {{ base }}">
            {{ message }}
        </div>
        {% endfor %}
        {% endfor %}
    </div>

    {# Table / Empty state #}
    {% if owners is not empty %}
    <div class="mt-8 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                <table class="min-w-full divide-y divide-gray-300 dark:divide-white/15">
                    <thead>
                        <tr>
                            <th scope="col"
                                class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-0 dark:text-white">
                                #</th>
                            <th scope="col"
                                class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Name
                            </th>
                            <th scope="col"
                                class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">SIRENE
                            </th>
                            <th scope="col"
                                class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">APE
                            </th>
                            <th scope="col"
                                class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Email
                            </th>
                            <th scope="col"
                                class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Phone
                            </th>
                            <th scope="col" class="py-3.5 pr-4 pl-3 text-right sm:pr-0">
                                <span class="sr-only">Actions</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-white/10">
                        {% for o in owners %}
                        <tr class="hover:bg-gray-50/60 dark:hover:bg-white/5">
                            <td
                                class="py-4 pr-3 pl-4 text-sm text-gray-500 whitespace-nowrap sm:pl-0 dark:text-gray-400">
                                {{ o.id }}
                            </td>
                            <td class="px-3 py-4 text-sm font-medium whitespace-nowrap text-gray-900 dark:text-white">
                                {{ o.firstname }} {{ o.lastname }}
                                {% if o.companyName is defined and o.companyName %}
                                <span class="ml-2 inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium
                                   text-gray-700 ring-1 ring-inset ring-gray-300
                                   dark:bg-white/10 dark:text-gray-200 dark:ring-white/10">
                                    {{ o.companyName }}
                                </span>
                                {% endif %}
                            </td>
                            <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-600 dark:text-gray-300">
                                {{ o.sirene ?: '—' }}
                            </td>
                            <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-600 dark:text-gray-300">
                                {{ o.ape ?: '—' }}
                            </td>
                            <td class="px-3 py-4 text-sm whitespace-nowrap">
                                {% if o.email %}
                                <a href="mailto:{{ o.email }}"
                                    class="text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
                                    {{ o.email }}
                                </a>
                                {% else %}
                                <span class="text-gray-400">—</span>
                                {% endif %}
                            </td>
                            <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-600 dark:text-gray-300">
                                {{ o.phone ?: '—' }}
                            </td>
                            <td class="py-4 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-0">
                                <div class="inline-flex items-center gap-2">
                                    <a href="{{ path('owner_show', { id: o.id }) }}" class="rounded-md px-2.5 py-1.5 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300
                                hover:bg-gray-50 dark:text-gray-200 dark:ring-white/10 dark:hover:bg-white/10">
                                        Show
                                    </a>
                                    <a href="{{ path('owner_edit', { id: o.id }) }}" class="rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs
                                hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
                                dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    {# Empty state #}
    <div class="mt-10 rounded-lg border border-dashed border-gray-300 p-10 text-center
                dark:border-white/15">
        <h3 class="text-base font-semibold text-gray-900 dark:text-white">Aucun Owner</h3>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Ajoutez votre premier émetteur pour générer des devis et factures.
        </p>
        <div class="mt-6">
            <a href="{{ path('owner_new') }}" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs
                  hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
                  dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">
                + New Owner
            </a>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}