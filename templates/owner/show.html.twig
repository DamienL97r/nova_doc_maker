{% extends 'base.html.twig' %}
{% block title %}Owner #{{ owner.id }}{% endblock %}
{% block body %}
{% for label, messages in app.flashes %}
{% for message in messages %}
<div class="alert alert-{{ label }}">{{ message }}</div>
{% endfor %}
{% endfor %}

<h1>{{ owner.firstname }} {{ owner.lastname }}</h1>

<dl class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-4">
    <div><strong>SIRENE:</strong> {{ owner.sirene }}</div>
    <div><strong>APE:</strong> {{ owner.ape }}</div>
    <div><strong>Email:</strong> {{ owner.email }}</div>
    <div><strong>Phone:</strong> {{ owner.phone }}</div>
</dl>

<div class="mt-6 flex gap-2">
    <a class="btn" href="{{ path('owner_index') }}">Back</a>
    <a class="btn btn-primary" href="{{ path('owner_edit', {id: owner.id}) }}">Edit</a>
    {% include 'owner/_delete_form.html.twig' with { owner: owner } %}
</div>
{% endblock %}