{% extends 'base.html.twig' %}
{% block title %}Edit Quote â€¢ {{ quote.number }}{% endblock %}

{% block body %}
<div class="mx-auto max-w-4xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Edit Quote</h1>
        <a href="{{ path('quote_show', {id: quote.id}) }}"
            class="text-sm/6 font-semibold text-indigo-600 dark:text-indigo-400">Back</a>
    </div>

    <div class="mt-6 rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-900/5 dark:bg-white/5 dark:ring-white/10">
        {% include 'quote/_form.html.twig' with { form: form, button_label: 'Update' } %}
    </div>

    <div class="mt-6 flex items-center justify-between">
        <form method="post" action="{{ path('quote_delete', {id: quote.id}) }}"
            onsubmit="return confirm('Delete this quote?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_quote_' ~ quote.id) }}">
            <button type="submit"
                class="rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600">
                Delete
            </button>
        </form>
    </div>
</div>
{% endblock %}